@model  List<Catergory>

<div class="container">

        <div class="row pt-4">
            <div class="col-6">
            <h2  class="text-primary" >Category List</h2>
            </div>
        <div class="col-6">
            <a  asp-controller="Category" asp-action="Create" class="btn  btn-primary">
                <i class="fa-solid fa-plus"></i> Create New Categoy
            </a>
        </div>
        </div>

    
    <table class="table" table-bordered table-striped>
        <thead>
            <tr>
                <th>Categery Name</th>
                <th>Display Order</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
            {
                <tr>
                    <td>@obj.Category</td>
                    <td>@obj.DisplayOrder</td>
                    <td>
                        @*Here as-route-id , where id name should match
                            with the argument we are getting on 
                            Controller 
                        *@
                        <div class="w-75 BTN-GROUP" role="group">
                            <a asp-controller="Category" 
                            asp-route-id="@obj.Id"
                            asp-action="Edit" 
                            class="btn btn-outline-primary mx-2">
                                Edit
                            </a>
                        </div>
                    </td>
                    <td>
                        <div class="w-75 BTN-GROUP" role="group">
                            <a asp-controller="Category" asp-action="Delete"
                               asp-route-id="@obj.Id"
                               class="btn btn-danger mx-2">
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>

    </div>

